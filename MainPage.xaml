<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BindingContext="{Binding MainPageViewModels,Source={StaticResource ServiceLocator}}"
             x:Class="MauiApp1.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Entry Text="{Binding Result}"></Entry>
            <Button Command="{Binding ReadCommand}" Text="读"></Button>
            <Button Command="{Binding WriteCommand}" Text="写"></Button>


            <Label Text="{Binding Result}"></Label>
            <Button Command="{Binding ClickMeCommand}" Text="ClickMe"></Button>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
